{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS", // or "ESNext" if your environment supports ES modules
        "target": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}